<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/style_card_view"
    card_view:cardCornerRadius="@dimen/card_corner_radius_5dp">

    <LinearLayout style="@style/style_linear_row_item">

        <TextView
            android:id="@+id/fact_title"
            style="@style/style_fact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            android:textColor="@color/blue" />

        <LinearLayout style="@style/style_linear_description">

            <TextView
                android:id="@+id/fact_description"
                style="@style/style_fact_description" />

            <ImageView
                android:id="@+id/fact_image"
                style="@style/style_fact_image"
                android:contentDescription="@string/app_name" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
